.home_title_item
  font-size 24px
  color $black
  font-weight bold
  text-transform uppercase
  margin-bottom 1rem

.home_calendar
  border 1px solid $yellow
  padding-right 1px
  margin-bottom 1rem
  //background-color $yellowW
  transition(all, .2s)

  &:hover
    shadow(0, 3px, 7px, 0px, 0, 0, 0, 0.35)

  .arrow_link
    color $yellow
    font-size 24px
    margin-top 1.5rem
    position absolute
    right 2rem
    bottom 1rem

.home_item
  height calc(100% - 44px) !important

.item_media
  background-color rgba(0, 0, 0, .4)
  position relative
  transition(all, .2s)
  margin-bottom 2rem

  &:hover
    background-color transparent

  figure
    margin-bottom 0
    z-index -1

  a
    color #fff

  .title
    position absolute
    bottom 2rem
    width 100%
    font-size 24px
    color #fff
    font-weight bold
    text-align center