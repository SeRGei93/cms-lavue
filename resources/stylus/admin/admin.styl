@charset "UTF-8"
html
  font-family sans-serif
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  height 100%

a
  color #4a89dc
  text-decoration none

body
#app
  height 100%

@import "_variables.styl"
@import "navBar.styl"

.title_form
  border-bottom 2px solid $vue-darkest-blue
  padding-bottom .7rem
  font-weight bold
  text-transform uppercase

.submit_absolute
  position absolute
  top .5rem
  right 1rem
  z-index 1

  &.cancel
    right 4rem

.custom-control-label
  &::before
    border-width 1px !important

fieldset.form_c
  border 1px solid $dark-gray !important
  padding .75rem !important

  legend
    width auto !important

.card-body
  .form-control
    box-shadow none

  .input-group-append
    .btn-secondary
      padding 0.5rem 3rem